<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:questionForms="clr-namespace:UI.ViewModels.QuestionForms"
             xmlns:controls="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
             xmlns:lang="clr-namespace:UI.Lang"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="questionForms:QuestionFormBaseVM"
             x:Class="UI.Views.Controls.BaseQuestionControls">
        <StackPanel>
            <Panel Margin="20, 0, 20, 0">
                <StackPanel HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal"
                                Margin="2, 0, 0, 3">
                        <TextBlock Text="{x:Static lang:Lang.QuestionNameLabel}"/>
                        <TextBlock Text="*"/>
                    </StackPanel>
                    <TextBox Width="300" Text="{Binding Name}"/>
                </StackPanel>
                <StackPanel HorizontalAlignment="Right">
                    <StackPanel Orientation="Horizontal"
                                Margin="2, 0, 0, 3">
                        <TextBlock Text="{x:Static lang:Lang.OGFileLabel}"/>
                        <TextBlock Text="*"/>
                    </StackPanel>
                    <StackPanel Margin="0, 0, 40, 0" Orientation="Horizontal">
                        <Button Content="Upload"
                                Command="{Binding UploadOgFile}"/>
                        <TextBlock VerticalAlignment="Center"
                                   Margin="10, 0, 0, 0"
                                   Text="{Binding OgFile.Name, FallbackValue={x:Static lang:Lang.NoFilesSelected}}" />
                    </StackPanel>
                </StackPanel>
            </Panel>
            <StackPanel Margin="20">
                <TextBlock Margin="2, 0, 0, 3"
                           Text="{x:Static lang:Lang.QuestionDescLabel}"/>
                <TextBox Margin="0, 0, 20, 0"
                         TextWrapping="Wrap"
                         Text="{Binding Desc}"/>
            </StackPanel>
            <StackPanel Margin="20, 0, 20, 20">
                <StackPanel Orientation="Horizontal"
                            Margin="2, 0, 0, 3">
                    <TextBlock Text="{x:Static lang:Lang.PathLabel}"/>
                    <TextBlock Text="*"/>
                </StackPanel>
                <Grid ColumnDefinitions="3*, *">
                    <Panel Grid.Column="0">
                        <TextBox Text="{Binding Path}"/>
                    </Panel>
                    <Button Grid.Column="1"
                            Margin="15 0, 0, 0"
                            Command="{Binding LoadLocation}">
                        <controls:SymbolIcon Symbol="More"/>
                    </Button>
                </Grid>
            </StackPanel>
        </StackPanel>
</UserControl>
