<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dialogs="clr-namespace:UI.ViewModels.Dialogs"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="UI.Views.Dialogs.Dialog"
        x:DataType="dialogs:DialogViewModel"
        Width="{Binding DialogContent.InitialWidth}"
        Height="{Binding DialogContent.InitialHeight}"
        WindowStartupLocation="CenterOwner"
        Title="{Binding DialogContent.Title}"
        CanResize="{Binding DialogContent.Resizable}">
    <ContentControl Content="{Binding DialogContent}"/>
</Window>
