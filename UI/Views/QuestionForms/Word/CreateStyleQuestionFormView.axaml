<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:questionForms="clr-namespace:UI.ViewModels.QuestionForms"
             xmlns:controls="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
             xmlns:lang="clr-namespace:UI.Lang"
             xmlns:word="clr-namespace:UI.ViewModels.QuestionForms.Word"
             xmlns:mycontrols="clr-namespace:UI.Views.Controls"
             xmlns:utils="clr-namespace:UI.Utils"
             xmlns:converters="clr-namespace:UI.Utils.Converters"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="word:CreateStyleQuestionFormViewModel"
             x:Class="UI.Views.QuestionForms.Word.CreateStyleQuestionFormView">
    <UserControl.Resources>
        <converters:AlignmentValueConverter x:Key="AlignmentValueConverter" />
    </UserControl.Resources>
    <StackPanel>
        <mycontrols:BaseQuestionControls/>
        <Separator Margin="20,0, 20, 20"/>
        <Grid ColumnDefinitions="*, *, *"
              RowDefinitions="*, *"
              Margin="20, 0">
            <StackPanel Grid.Row="0" Grid.Column="0" 
                        HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal"
                            Margin="2, 0, 0, 5">
                    <TextBlock Text="{x:Static lang:Lang.StyleNameLabel}"/>
                    <TextBlock Text="*"/>
                </StackPanel>
                <TextBox Width="200" Text="{Binding StyleName}"/>
            </StackPanel>
            <StackPanel Grid.Row="0" Grid.Column="1" 
                        HorizontalAlignment="Center">
                <TextBlock Margin="2, 0, 0, 5" 
                           Text="{x:Static lang:Lang.BasedOnLabel}"/>
                <ComboBox Width="200" 
                          ItemsSource="{Binding BasedOnStyles}"
                          SelectedItem="{Binding BasedOnSelected}"/>
            </StackPanel>
            <StackPanel Grid.Row="0" Grid.Column="2" 
                        HorizontalAlignment="Right">
                <TextBlock Margin="2, 0, 0, 5" 
                           Text="{x:Static lang:Lang.FontNameLabel}"/>
                <ComboBox Width="200" 
                          ItemsSource="{Binding FontNames}"
                          SelectedItem="{Binding FontNamesSelected}"/>
            </StackPanel>
            <StackPanel Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left"
                        Margin="0, 20, 0, 0">
                <TextBlock Margin="2, 0, 0, 5" 
                           Text="{x:Static lang:Lang.AlignmentLabel}"/>
                <ComboBox Width="200"
                          ItemsSource="{x:Static word:CreateStyleQuestionFormViewModel.Alignments}"
                          SelectedItem="{Binding AlignmentSelected, Converter={StaticResource AlignmentValueConverter}}"/>
            </StackPanel>
            <StackPanel Grid.Row="1" Grid.Column="1" 
                        HorizontalAlignment="Center"
                        Margin="0, 20, 0, 0">
                <TextBlock Margin="2, 0, 0, 5" 
                           Text="{x:Static lang:Lang.ColorLabel}"/>
                <controls:ColorPickerButton Color="{Binding Color}"/>
            </StackPanel>
            <StackPanel Grid.Row="1" Grid.Column="2" 
                        HorizontalAlignment="Right"
                        Margin="0, 20, 0, 0">
                <TextBlock Margin="2, 0, 0, 5" 
                           Text="{x:Static lang:Lang.FontSizeLabel}"/>
                <controls:NumberBox Width="200"
                                    NumberFormatter="{x:Static questionForms:QuestionFormBaseVM.IntFormat}"
                                    ValidationMode="InvalidInputOverwritten"
                                    SpinButtonPlacementMode="Inline"
                                    Value="{Binding FontSize}"/>
            </StackPanel>
        </Grid>
    </StackPanel>
</UserControl>
