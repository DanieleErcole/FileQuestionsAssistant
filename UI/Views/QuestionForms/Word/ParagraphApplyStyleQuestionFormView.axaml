<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:lang="clr-namespace:UI.Lang"
             xmlns:word="clr-namespace:UI.ViewModels.QuestionForms.Word"
             xmlns:mycontrols="clr-namespace:UI.Views.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="word:ParagraphApplyStyleQuestionFormViewModel"
             x:Class="UI.Views.QuestionForms.Word.ParagraphApplyStyleQuestionFormView">
    <StackPanel>
        <mycontrols:BaseQuestionControls/>
        <Separator Margin="20,0, 20, 20"/>
        <StackPanel Margin="20,0, 0, 0"
                    HorizontalAlignment="Left">
            <StackPanel Orientation="Horizontal"
                        Margin="2, 0, 0, 5">
                <TextBlock Text="{x:Static lang:Lang.StyleNameLabel}"/>
                <TextBlock Text="*"/>
            </StackPanel>
            <ComboBox Width="200" 
                      ItemsSource="{Binding StyleNames}"
                      SelectedItem="{Binding StyleNameSelected}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
