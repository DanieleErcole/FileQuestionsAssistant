<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:lang="clr-namespace:UI.Lang"
             xmlns:controls="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
             xmlns:pages="clr-namespace:UI.ViewModels.Pages"
             xmlns:mycontrols="clr-namespace:UI.Views.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="UI.Views.Pages.QuestionsPageView"
             x:DataType="pages:QuestionsPageViewModel">
    <UserControl.Styles>
        <StyleInclude Source="/Styles/ButtonStyles.axaml"/>
    </UserControl.Styles>
    
    <DockPanel x:Name="PageContainer">
        <TextBlock DockPanel.Dock="Top"
                   Margin="20, 10, 0, 20"
                   Theme="{StaticResource SubtitleTextBlockStyle}"
                   Text="{x:Static lang:Lang.QuestionsTab}" />
        <TextBlock DockPanel.Dock="Top"
                   FontWeight="Normal"
                   Margin="30, 0, 0, 0"
                   FontSize="16"
                   Theme="{StaticResource BodyStrongTextBlockStyle}"
                   Text="{x:Static lang:Lang.RecentText}" />
        
        <DockPanel DockPanel.Dock="Top">
            <StackPanel DockPanel.Dock="Right"
                        Width="400">
                <Button Classes="big-button" 
                        Margin="0, 20, 0, 20"
                        Command="{Binding OpenQuestion}">
                    <Grid ColumnDefinitions="Auto,*">
                        <controls:SymbolIcon Symbol="OpenLocal" 
                                             FontSize="30"/>
                        <StackPanel Grid.Column="1" Margin="20, 0, 0, 0">
                            <TextBlock Text="{x:Static lang:Lang.ImportQuestionBtnText}"/>
                            <TextBlock Theme="{StaticResource CaptionTextBlockStyle}" 
                                       Text="{x:Static lang:Lang.ImportQuestionBtnDesc}"/>
                        </StackPanel>
                    </Grid>
                </Button>
                <Button Classes="big-button" 
                        Command="{Binding AddQuestionBtn}">
                    <Grid ColumnDefinitions="Auto,*">
                        <controls:SymbolIcon Symbol="Add"
                                             FontSize="30"/>
                        <StackPanel Grid.Column="1" Margin="20, 0, 0, 0">
                            <TextBlock Text="{x:Static lang:Lang.AddQuestionBtnText}"/>
                            <TextBlock Width="230"
                                       Theme="{StaticResource CaptionTextBlockStyle}"
                                       TextWrapping="Wrap"
                                       Text="{x:Static lang:Lang.AddQuestionBtnDesc}"/>
                        </StackPanel>
                    </Grid>
                </Button>
            </StackPanel>
            
            <DockPanel DockPanel.Dock="Left"
                       Margin="20, 20, 20, 20">
                <TextBox DockPanel.Dock="Top"
                         Width="400"
                         Margin="10, 0, 0, 0"
                         HorizontalAlignment="Left"
                         Text="{Binding SearchText}"
                         Watermark="{x:Static lang:Lang.SearchPlaceholder}"/>
                <mycontrols:QuestionList DockPanel.Dock="Top"/>
            </DockPanel>
        </DockPanel>
    </DockPanel>
    
</UserControl>
